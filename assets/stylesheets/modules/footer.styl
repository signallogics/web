
footer-height = 150px
.footer
	@extend .wrap
	position relative
	height footer-height
	user-select none
	background color_ebony-clay
	min-height 0

	&__logo
		absolute: top -13px
		left calc(50% - 110px)
		color color_slate-gray
		margin 0 auto
		margin-top 60px

	&__link
		text-transform uppercase
		color color_slate-gray
		font-size 20px
		font-weight 400
		link-gradation @color, 2px
		line-height footer-height
		margin 0 20px

	&__left-links
		width calc(50% - 190px)
		text-align right

	&__right-links
		float right
		width calc(50% - 190px)
		margin-top -(footer-height)

	&__langs
		absolute top (footer-height - 30)
		height 500px
		width 100%
		text-align center
		font-size .8em

		a
			padding-right 10px
			padding-left @padding-right
			color color_slate-gray
